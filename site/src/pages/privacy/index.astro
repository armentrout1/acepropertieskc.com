import Layout from "../../layouts/Layout.astro";
import { SITE } from "../../lib/siteConfig";
---

<Layout title="Privacy Policy | ACE Properties KC" description="Read the ACE Properties KC privacy policy for our Kansas City metro home buying services.">
  <section class="space-y-4">
    <h1 class="text-4xl font-semibold text-primary">Privacy Policy</h1>
    <p class="text-muted">
      We respect your privacy. Contact details and property information submitted through our forms or phone calls are used solely to respond to your request, evaluate your property, and coordinate next steps. We do not sell or share your information with outside marketers.
    </p>
    <p class="text-muted">
      If you would like us to update or remove your information, email us at <a href={`mailto:${SITE.email}`} class="text-secondary hover:underline">{SITE.email}</a> and we will confirm once the change is complete.
    </p>
  </section>
</Layout>
