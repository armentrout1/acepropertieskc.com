---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import MobileCtaBar from "../components/MobileCtaBar.astro";
import { SITE } from "../lib/siteConfig";

type Props = {
  title?: string;
  description?: string;
};

const { title = SITE.defaultTitle, description = SITE.defaultDescription } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
	</head>
	<body class="min-h-screen bg-white text-base text-primary">
		<Header />
		<main class="mx-auto w-full max-w-6xl flex-1 px-4 pb-20 pt-8 md:pb-0">
			<slot />
		</main>
		<Footer />
		<MobileCtaBar />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
